@model DailyPlanning.Models.DailyPlansViewModel.DetailsDailyPlanViewModel

@{
    ViewBag.Title = "Details DailyPlan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Today)
        </dt>
        <dd>
            <ul>
                @foreach(var item in Model.Today)
                {
                    <li>
                        @Html.ActionLink(item.Title,"Details","WorkItem",new {id = item.WorkItemID }, null)
                        @Html.ValidationMessageFor(model => model.Today, "", new { @class = "text-danger" })
                    </li>
                }
            </ul>

        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DayBefore)
        </dt>
        <dd>
            <ul>
                @foreach (var item in Model.DayBefore)
                {
                    <li>
                        @Html.ActionLink(item.Title, "Details", "WorkItem", new { id = item.WorkItemID }, null)
                        @Html.ValidationMessageFor(model => model.DayBefore, null, new { @class = "text-danger" })
                    </li>
                }
            </ul>

        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Note)
        </dd>
    </dl>
</div>
<p>
    @if (Model.Date.Date == DateTime.Now.Date)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.DailyPlanID }, new { @class = "btn btn-info", @id = "index-daily-plan-edit-link-id" })
    }
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default", @id = "details-back-to-list-link-id" })
</p>
