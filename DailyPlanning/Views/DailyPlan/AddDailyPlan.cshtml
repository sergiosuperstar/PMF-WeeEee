@model DailyPlanning.Models.DailyPlansViewModel.AddDailyPlanViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@{
    ViewBag.Title = "Add DailyPlan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddDailyPlan</h2>

@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>DailyPlan</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Date, new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.Date, null, new { @class = "text-danger" })
            </div>
        </div>        
        <div class="form-group">
            @Html.LabelFor(model => model.DayBefore, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBoxFor(model => model.SelectedWorkItemsDayBefore, new MultiSelectList(Model.DayBefore, "WorkItemId", "Title"), new { @id = "select-daily-plan-day-before-listbox-id"})
                @Html.ValidationMessageFor(model => model.SelectedWorkItemsDayBefore, null, new { @class = "text-danger", @id = "select-daily-plan-day-before-text-error-id"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Today, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               
                    @Html.ListBoxFor(model => model.SelectedWorkItemsToday, new MultiSelectList(Model.Today, "WorkItemId", "Title"), new { @id = "select-daily-plan-today-listbox-id"})
                    @Html.ValidationMessageFor(model => model.SelectedWorkItemsToday, null, new { @class = "text-danger", @id = "select-daily-plan-today-text-error-id" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Note, new { @class = "form-control", @id = "add-note-text-id" })
                @Html.ValidationMessageFor(model => model.Note, null, new { @class = "text-danger", @id = "add-note-text-error-id"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" id= "create-daily-plan-link-id" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
